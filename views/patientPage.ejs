                    ${list[i].NationalId}
                </li>
                <li><strong>Gender:</strong>
                    ${list[i].Gender}
                </li>
                <li><strong>Relation:</strong>
                    ${list[i].Relation}
                </li>
                <li><strong>FamilyMemId:</strong>
                    ${list[i].FamilyMemId}
                </li>
               
                
                                
        </ul>`
                }


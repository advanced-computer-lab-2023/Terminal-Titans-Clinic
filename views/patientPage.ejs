<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        body {
            background-repeat: no-repeat;
            background-size: 100%;
        }

        h1 {
            text-align: center;
        }

        td {
            border: 1px solid black;
        }
    </style>

    <title>Log in</title>

</head>

<body>

    <div id="myPatient">

    </div>


    <button type="button" onclick="getDoctorInfo()">ViewAllDoctors</button>
    <div id="ViewAllDoctors"></div>

    
    <button type="button" onclick="viewPrescriptions()">MyPrescriptions</button>
    <div id="viewPrescriptions"></div>

   


    


    <script>
       
       async function viewPrescriptions() {
            try {
                var response = await fetch(`http://localhost:8000/patient/viewPrescriptions`);


                var res = await response.json();


                if (!res.success)
                    return alert(res.message);

                var list = res.Result
                console.log(list)
                var cartoona = ''
                for (let i = 0; i < list.length; i++) {
                    cartoona += `
                    <ul>
                   
                <li><strong>DoctorId:</strong>
                    ${list[i].DoctorId}
                </li>
                <li><strong>Status:</strong>
                    ${list[i].status}
                </li>
                <li><strong>Date:</strong>
                    ${list[i].Date}
                </li>
               
                
                                
        </ul>`
                }

                document.getElementById('viewPrescriptions').innerHTML = cartoona
            }
            catch (error) {
                console.error('Error fetching prescriptions data:', error);
            }
        }

       
        async function getDoctorInfo() {
            try {
                var response = await fetch(`http://localhost:8000/patient/getDoctorInfo'`);


                var res = await response.json();


                if (!res.success)
                    return alert(res.message);

                var list = res.Result
                console.log(list)
                var cartoona = ''
                for (let i = 0; i < list.length; i++) {
                    cartoona += `
                    <ul>
                        <li><strong>Price</strong>
                    ${list[i].Name}
                </li>
               
               
                
                                
        </ul>`
                }

                document.getElementById('ViewAllDoctors').innerHTML = cartoona
            }
            catch (error) {
                console.error('Error fetching doctors data:', error);
            }
        }



       
    </script>
</body>

</html>

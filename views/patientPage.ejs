async function viewRegFamMem() {
            try {
                var response = await fetch(`http://localhost:8000/patient/viewRegFamMem`);


                var res = await response.json();


                if (!res.success)
                    return alert(res.message);

                var list = res.Result
                console.log(list)
                var cartoona = ''
                for (let i = 0; i < list.length; i++) {
                    cartoona += `
                    <ul>
                   
                <li><strong>Name:</strong>
                    ${list[i].Name}
                </li>
